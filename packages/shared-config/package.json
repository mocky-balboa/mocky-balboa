{
  "name": "@mocky-balboa/shared-config",
  "version": "1.0.0",
  "description": "Shared configuration for Mocky Balboa packages.",
  "type": "module",
  "homepage": "https://docs.mockybalboa.com",
  "bugs": {
    "url": "https://github.com/mocky-balboa/mocky-balboa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mocky-balboa/mocky-balboa.git",
    "directory": "packages/client"
  },
  "keywords": [],
  "author": {
    "name": "Lewis Nelson",
    "url": "https://lewnelson.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "main": "./dist/cjs/shared-config.cjs",
  "types": "./dist/cjs/shared-config.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/esm/shared-config.js",
        "types": "./dist/esm/shared-config.d.ts"
      },
      "require": {
        "default": "./dist/cjs/shared-config.cjs",
        "types": "./dist/cjs/shared-config.d.ts"
      }
    }
  },
  "scripts": {
    "build:esm": "swc src --out-dir dist/esm -C module.type=es6 --strip-leading-paths",
    "build:cjs": "swc src --out-dir dist/cjs -C module.type=commonjs --strip-leading-paths --out-file-extension cjs",
    "build:esm:types": "tsc --emitDeclarationOnly --project tsconfig.build.esm.json",
    "build:cjs:types": "tsc --emitDeclarationOnly --project tsconfig.build.cjs.json",
    "build": "pnpm clean && pnpm run build:esm && pnpm run build:cjs && pnpm run build:types && pnpm run post:build",
    "build:types": "pnpm run build:esm:types && pnpm run build:cjs:types",
    "build:watch": "concurrently \"pnpm run build:esm --watch\" \"pnpm run build:cjs --watch\" \"pnpm run build:esm:types --watch\" \"pnpm run build:cjs:types --watch\" \"pnpm run post:build:watch\"",
    "post:build": "pnpm --workspace-root package-post-cjs-build $(pwd)",
    "post:build:watch": "chokidar \"dist/cjs/**/*.cjs\" -c \"pnpm run post:build\"",
    "clean": "rimraf dist",
    "release": "semantic-release",
    "test": "echo \"No tests\""
  },
  "devDependencies": {
    "@swc/cli": "catalog:",
    "@swc/core": "catalog:",
    "chokidar-cli": "catalog:",
    "@types/node": "catalog:",
    "concurrently": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:"
  }
}
