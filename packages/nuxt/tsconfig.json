{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "module": "NodeNext",
    "target": "ES2021",
    "esModuleInterop": true,
    "lib": ["ES2021"],
    "types": ["node"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "paths": {
      "nitropack/types": ["./node_modules/nitropack/dist/types/index.d.ts"],
      "nitropack/runtime": ["./node_modules/nitropack/dist/runtime/index.d.ts"]
    }
  },
  "exclude": ["dist"]
}
