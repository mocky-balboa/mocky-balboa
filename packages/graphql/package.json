{
  "name": "@mocky-balboa/graphql",
  "version": "0.0.0",
  "description": "GraphQL utilities for Mocky Balboa to mock GraphQL queries, mutations, and subscriptions in your test suites.",
  "type": "module",
  "homepage": "https://docs.mockybalboa.com",
  "bugs": {
    "url": "https://github.com/mocky-balboa/mocky-balboa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mocky-balboa/mocky-balboa.git",
    "directory": "packages/client"
  },
  "keywords": [
    "mocking",
    "network",
    "testing",
    "tests",
    "integration",
    "graphql",
    "codegen",
    "plugin"
  ],
  "author": {
    "name": "Lewis Nelson",
    "url": "https://lewnelson.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "main": "./dist/cjs/graphql.cjs",
  "types": "./dist/types/graphql.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/graphql.js",
      "require": "./dist/cjs/graphql.cjs",
      "types": "./dist/types/graphql.d.ts"
    },
    "./codegen-plugin": {
      "import": "./dist/esm/codegen-plugin.js",
      "require": "./dist/cjs/codegen-plugin.cjs",
      "types": "./dist/types/codegen-plugin.d.ts"
    }
  },
  "scripts": {
    "build:esm": "swc src --out-dir dist/esm -C module.type=es6 --strip-leading-paths",
    "build:cjs": "swc src --out-dir dist/cjs -C module.type=commonjs --strip-leading-paths --out-file-extension cjs",
    "build:esm:types": "tsc --emitDeclarationOnly --project tsconfig.build.esm.json",
    "build:cjs:types": "tsc --emitDeclarationOnly --project tsconfig.build.cjs.json",
    "build": "pnpm clean && pnpm run build:esm && pnpm run build:cjs && pnpm run build:types && pnpm run post:build",
    "build:types": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "build:watch": "concurrently \"pnpm run build:esm --watch\" \"pnpm run build:cjs --watch\" \"pnpm run build:types --watch\" \"pnpm run post:build:watch\"",
    "post:build": "pnpm --workspace-root package-post-cjs-build $(pwd)",
    "post:build:watch": "chokidar \"dist/cjs/**/*.cjs\" -c \"pnpm run post:build\"",
    "clean": "rimraf dist",
    "release": "semantic-release",
    "test": "vitest"
  },
  "dependencies": {
    "@graphql-codegen/plugin-helpers": "^5.0.0",
    "@graphql-codegen/visitor-plugin-common": "^5.0.0",
    "@mocky-balboa/client": "workspace:*",
    "@mocky-balboa/logger": "workspace:*",
    "graphql": "^16.11.0",
    "change-case-all": "^2.1.0"
  },
  "devDependencies": {
    "@swc/cli": "catalog:",
    "@swc/core": "catalog:",
    "chokidar-cli": "catalog:",
    "@types/node": "catalog:",
    "concurrently": "catalog:",
    "rimraf": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/typescript": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^5.0.0"
  }
}
