{
	"name": "@mocky-balboa/server",
	"version": "1.0.9",
	"description": "Server library for Mocky Balboa to enable real-time network mocking for your server-side network requests in your browser based test suites via WebSockets.",
	"type": "module",
	"homepage": "https://docs.mockybalboa.com",
	"bugs": {
		"url": "https://github.com/mocky-balboa/mocky-balboa/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mocky-balboa/mocky-balboa.git",
		"directory": "packages/server"
	},
	"keywords": [
		"mocking",
		"network",
		"testing",
		"tests",
		"integration",
		"server",
		"client"
	],
	"author": {
		"name": "Lewis Nelson",
		"url": "https://lewnelson.com"
	},
	"license": "MIT",
	"packageManager": "pnpm@10.14.0",
	"main": "./dist/cjs/server.cjs",
	"types": "./dist/types/server.d.ts",
	"exports": {
		".": {
			"import": "./dist/esm/server.js",
			"require": "./dist/cjs/server.cjs",
			"types": "./dist/types/server.d.ts"
		},
		"./middleware": {
			"import": "./dist/esm/middleware.js",
			"require": "./dist/cjs/middleware.cjs",
			"types": "./dist/types/middleware.d.ts"
		}
	},
	"scripts": {
		"build:esm": "swc src --out-dir dist/esm -C module.type=es6 --strip-leading-paths",
		"build:cjs": "swc src --out-dir dist/cjs -C module.type=commonjs --strip-leading-paths --out-file-extension cjs",
		"build:esm:types": "tsc --emitDeclarationOnly --project tsconfig.build.esm.json",
		"build:cjs:types": "tsc --emitDeclarationOnly --project tsconfig.build.cjs.json",
		"build": "pnpm clean && pnpm run build:esm && pnpm run build:cjs && pnpm run build:types && pnpm run post:build",
		"build:types": "tsc --emitDeclarationOnly --project tsconfig.types.json",
		"build:watch": "concurrently \"pnpm run build:esm --watch\" \"pnpm run build:cjs --watch\" \"pnpm run build:types --watch\" \"pnpm run post:build:watch\"",
		"post:build": "pnpm --workspace-root package-post-cjs-build $(pwd)",
		"post:build:watch": "chokidar \"dist/cjs/**/*.cjs\" -c \"pnpm run post:build\"",
		"clean": "rimraf dist",
		"release": "semantic-release",
		"test": "vitest"
	},
	"dependencies": {
		"@mocky-balboa/logger": "workspace:*",
		"@mocky-balboa/shared-config": "workspace:*",
		"@mocky-balboa/websocket-messages": "workspace:*",
		"cors": "^2.8.5",
		"express": "catalog:",
		"mime-types": "^3.0.1",
		"msw": "^2.11.1",
		"uuid": "catalog:",
		"ws": "catalog:"
	},
	"devDependencies": {
		"@fastify/express": "catalog:",
		"@swc/cli": "catalog:",
		"@swc/core": "catalog:",
		"@types/cors": "^2.8.17",
		"@types/express": "catalog:",
		"@types/koa": "catalog:",
		"@types/mime-types": "^3.0.1",
		"@types/node": "catalog:",
		"@types/ws": "catalog:",
		"chokidar-cli": "catalog:",
		"concurrently": "catalog:",
		"fastify": "catalog:",
		"get-port": "catalog:",
		"koa": "catalog:",
		"rimraf": "catalog:",
		"typescript": "catalog:",
		"vitest": "catalog:",
		"vitest-mock-extended": "^3.1.0"
	}
}
