{
  "name": "@mocky-balboa/mocky-balboa",
  "version": "1.0.0",
  "description": "Knock out server-side test headaches",
  "author": {
    "name": "Lewis Nelson",
    "url": "https://lewnelson.com"
  },
  "private": true,
  "scripts": {
    "build:packages": "pnpm --filter \"./packages/*\" build",
    "build:packages-watch": "pnpm --filter \"./packages/*\" --parallel build:watch",
    "lint": "oxlint",
    "test:packages": "pnpm --filter \"./packages/*\" test",
    "prepare": "husky",
    "prepare-release": "pnpm changeset",
    "package-post-cjs-build": "node ./scripts/package-post-cjs-build.cjs"
  },
  "keywords": [
    
  ],
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@changesets/types": "^6.1.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@mocky-balboa/changeset-changelog": "file:./scripts/changeset-changelog",
    "@types/recursive-readdir": "^2.2.4",
    "husky": "^9.1.7",
    "octokit": "^5.0.3",
    "oxlint": "^1.14.0",
    "recursive-readdir": "^2.2.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}